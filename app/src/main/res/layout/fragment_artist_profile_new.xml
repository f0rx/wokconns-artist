<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".ui.fragment.ArtistProfile">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivBanner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_img"
                app:layout_collapseMode="parallax" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="110dp"
                android:elevation="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_120sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ivArtist"
                        android:layout_width="@dimen/_110sdp"
                        android:layout_height="@dimen/_110sdp"
                        android:layout_gravity="start"
                        android:elevation="8dp"
                        android:src="@drawable/dummyuser_image"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="5dp" />

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/ll_profile_photo"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_10sdp"
                        android:background="@drawable/shape_for_round"
                        android:elevation="@dimen/_2sdp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@drawable/ic_camera" />
                    </LinearLayout>
                </RelativeLayout>

                <com.wokconns.wokconns.utils.CustomTextViewBold
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_info"
                    android:textSize="@dimen/_14sdp" />

                <com.wokconns.wokconns.utils.CustomTextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile_info"
                    android:textSize="@dimen/_13sdp" />

                <com.willy.ratingbar.ScaleRatingBar xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/simpleRatingBarOver"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:isIndicator="false"
                    app:srb_clearRatingEnabled="true"
                    app:srb_drawableEmpty="@drawable/empty"
                    app:srb_drawableFilled="@drawable/ic_star"
                    app:srb_isIndicator="true"
                    app:srb_minimumStars="0"
                    app:srb_numStars="5"
                    app:srb_rating="2"
                    app:srb_scrollable="true"
                    app:srb_starHeight="12dp"
                    app:srb_starPadding="3dp"
                    app:srb_starWidth="12dp"
                    app:srb_stepSize="0.5" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?android:attr/actionBarSize"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                app:layout_collapseMode="parallax">

                <LinearLayout
                    android:id="@+id/ll_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="@drawable/bg_rounded_corner_transparent">

                    <ImageView
                        android:id="@+id/back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_8sdp"
                        android:src="@drawable/back" />
                </LinearLayout>


                <com.wokconns.wokconns.utils.CustomTextView
                    android:id="@+id/tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/button_selector2"
                    android:paddingStart="@dimen/_15sdp"
                    android:paddingTop="5dp"
                    android:paddingEnd="@dimen/_15sdp"
                    android:paddingBottom="5dp"
                    android:text="@string/edit"
                    android:textColor="@color/white"
                    android:visibility="visible" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/activity_landing"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/ivBanner"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_120sdp"
                android:layout_marginEnd="@dimen/_15sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <com.wokconns.wokconns.utils.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_info"
                            android:textSize="@dimen/_15sdp" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.wokconns.wokconns.utils.CustomTextView
                                android:id="@+id/tv_hourly_rate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:drawableStart="@drawable/ic_credit_card"
                                android:drawablePadding="@dimen/_10sdp"
                                android:padding="@dimen/_2sdp"
                                android:text="@string/F" />

                            <com.wokconns.wokconns.utils.CustomTextView
                                android:id="@+id/tv_hourly_rate_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:drawablePadding="@dimen/_10sdp"
                                android:text="" />

                        </RelativeLayout>

                        <com.wokconns.wokconns.utils.CustomTextView
                            android:id="@+id/tv_job_completed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_profile_jobs"
                            android:drawablePadding="@dimen/_10sdp"
                            android:padding="@dimen/_2sdp"
                            android:text="Jobs Completed" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/light_gray" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">

                            <com.wokconns.wokconns.utils.CustomTextViewBold
                                android:id="@+id/tv_online_offline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/ic_on_off_circle"
                                android:drawablePadding="@dimen/_5sdp"
                                android:text=""
                                android:textSize="@dimen/_15sdp"
                                android:visibility="visible" />

                            <com.wokconns.wokconns.utils.CustomTextView
                                android:id="@+id/tv_online_msg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:drawablePadding="@dimen/_10sdp"
                                android:text="@string/online_msg"
                                android:textSize="@dimen/_12sdp" />
                        </LinearLayout>


                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/swOnOff"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="center"
                            android:textSize="@dimen/_20sdp"
                            android:thumb="@drawable/custom_thumb"
                            app:showText="false"
                            app:track="@drawable/custom_track" />

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/light_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <com.wokconns.wokconns.utils.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/profile_bio"
                            android:textSize="@dimen/_15sdp" />

                        <com.wokconns.wokconns.utils.CustomTextView
                            android:id="@+id/tvAbout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/light_gray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.wokconns.wokconns.utils.CustomTextViewBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/profile_details"
                                android:textSize="@dimen/_15sdp"
                                android:visibility="visible" />

                            <ImageView
                                android:id="@+id/iv_edit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:src="@drawable/ic_profile_edit" />
                        </RelativeLayout>

                        <com.wokconns.wokconns.utils.CustomTextView
                            android:id="@+id/tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_profile_mail"
                            android:drawablePadding="@dimen/_10sdp"
                            android:padding="@dimen/_2sdp" />

                        <com.wokconns.wokconns.utils.CustomTextView
                            android:id="@+id/tv_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_phone_book"
                            android:drawablePadding="@dimen/_10sdp"
                            android:padding="@dimen/_2sdp" />

                        <com.wokconns.wokconns.utils.CustomTextView
                            android:id="@+id/tv_gender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_profile_gender"
                            android:drawablePadding="@dimen/_10sdp"
                            android:padding="@dimen/_2sdp"
                            android:text="Other" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="@color/light_gray" />

                    <LinearLayout
                        android:id="@+id/ll_gallery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <com.wokconns.wokconns.utils.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_gallery"
                            android:drawablePadding="@dimen/_10sdp"
                            android:text="@string/gallery"
                            android:textSize="@dimen/_15sdp" />

                        <com.wokconns.wokconns.utils.CustomTextView
                            android:id="@+id/tv_gallery_msg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawablePadding="@dimen/_10sdp"
                            android:text="@string/gallery_msg"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/light_gray" />

                    <LinearLayout
                        android:id="@+id/ll_services"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <com.wokconns.wokconns.utils.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_profile_services"
                            android:drawablePadding="@dimen/_10sdp"
                            android:text="@string/profile_services"
                            android:textSize="@dimen/_15sdp" />

                        <com.wokconns.wokconns.utils.CustomTextView
                            android:id="@+id/tv_services_msg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawablePadding="@dimen/_10sdp"
                            android:text="@string/services_msg"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/light_gray" />

                    <LinearLayout
                        android:id="@+id/ll_works"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <com.wokconns.wokconns.utils.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_profile_works"
                            android:drawablePadding="@dimen/_10sdp"
                            android:text="@string/profile_works"
                            android:textSize="@dimen/_15sdp" />

                        <com.wokconns.wokconns.utils.CustomTextView
                            android:id="@+id/tv_works_msg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawablePadding="@dimen/_10sdp"
                            android:text="@string/works_msg"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/light_gray" />

                    <LinearLayout
                        android:id="@+id/ll_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:orientation="vertical">

                        <com.wokconns.wokconns.utils.CustomTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableStart="@drawable/ic_profile_review"
                            android:drawablePadding="@dimen/_10sdp"
                            android:text="@string/profile_reviews"
                            android:textSize="@dimen/_15sdp" />

                        <com.wokconns.wokconns.utils.CustomTextView
                            android:id="@+id/tv_reviews_msg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:drawablePadding="@dimen/_10sdp"
                            android:text="@string/reviews_msg"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>
</layout>
