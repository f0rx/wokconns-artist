<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="NearByDTO"
            type="com.wokconns.wokconns.dto.HomeNearByJobsDTO" />
    </data>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_second"
                android:layout_margin="@dimen/_5sdp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/ll_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_image"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/dummyuser_image" />
                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:id="@+id/ll_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ll_image"
                    android:orientation="horizontal">

                    <com.wokconns.wokconns.utils.CustomTextViewSemiBold
                        android:id="@+id/tv_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:maxLength="80"
                        android:maxLines="2"
                        android:text="@{NearByDTO.title}"
                        android:textSize="@dimen/_10sdp"/>

                    <com.wokconns.wokconns.utils.CustomTextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:text="20" />
                </LinearLayout>

                <com.wokconns.wokconns.utils.CustomTextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_first"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/ll_image"
                    android:text="@{NearByDTO.cat_name}"
                    android:textSize="@dimen/_9sdp" />

                <com.wokconns.wokconns.utils.CustomTextView
                    android:id="@+id/CTVjobdonefor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_category"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toEndOf="@+id/ll_image"
                    android:drawableStart="@drawable/ic_placeholder"
                    android:drawablePadding="@dimen/_5sdp"
                    android:text="@{NearByDTO.address}"
                    android:textSize="@dimen/_9sdp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>