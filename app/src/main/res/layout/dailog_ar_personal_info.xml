<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/dialog_back"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/dialog_back"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_back_blue">

            <com.wokconns.wokconns.utils.CustomTextViewBold
                android:id="@+id/ctvbTitle"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/edit_personal_information"
                android:textColor="@color/white"
                android:textSize="17sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <com.wokconns.wokconns.utils.InputFieldView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.wokconns.wokconns.utils.CustomEditText
                    android:id="@+id/etCategoryD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_drop_down"
                    android:editable="false"
                    android:hint="@string/select_your_speciality"
                    android:singleLine="true"
                    android:text="" />

            </com.wokconns.wokconns.utils.InputFieldView>

            <com.wokconns.wokconns.utils.InputOpenFieldView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.wokconns.wokconns.utils.CustomEditText
                    android:id="@+id/etNameD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/your_name"
                    android:inputType="text"
                    android:singleLine="true"
                    android:text="" />

            </com.wokconns.wokconns.utils.InputOpenFieldView>


            <com.wokconns.wokconns.utils.InputOpenFieldView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.wokconns.wokconns.utils.CustomEditText
                    android:id="@+id/etBioD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/your_bio"
                    android:inputType="text"
                    android:maxLines="3"
                    android:minLines="3"
                    android:text="" />

            </com.wokconns.wokconns.utils.InputOpenFieldView>

            <com.wokconns.wokconns.utils.InputOpenFieldView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.wokconns.wokconns.utils.CustomEditText
                    android:id="@+id/etCityD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_placeholder"
                    android:hint="@string/your_city"
                    android:inputType="text"
                    android:singleLine="true"
                    android:text="" />

            </com.wokconns.wokconns.utils.InputOpenFieldView>
            <com.wokconns.wokconns.utils.InputOpenFieldView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.wokconns.wokconns.utils.CustomEditText
                    android:id="@+id/etCountryD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_placeholder"
                    android:hint="@string/your_country"
                    android:inputType="text"
                    android:singleLine="true"
                    android:text="" />

            </com.wokconns.wokconns.utils.InputOpenFieldView>
            <com.wokconns.wokconns.utils.InputFieldView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.wokconns.wokconns.utils.CustomEditText
                    android:id="@+id/etLocationD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_placeholder"
                    android:hint="@string/your_location"
                    android:editable="false"
                    android:singleLine="true"
                    android:text="" />

            </com.wokconns.wokconns.utils.InputFieldView>

            <com.wokconns.wokconns.utils.InputOpenFieldView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <com.wokconns.wokconns.utils.CustomEditText
                    android:id="@+id/etRateD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_dollar"
                    android:hint="@string/my_rate"
                    android:inputType="number"
                    android:maxLength="4"
                    android:singleLine="true"
                    android:text="" />

            </com.wokconns.wokconns.utils.InputOpenFieldView>


            <com.wokconns.wokconns.utils.CustomTextViewBold
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="35dp"
            android:background="@color/colorPrimaryDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <com.wokconns.wokconns.utils.CustomTextViewBold
                android:id="@+id/tvYes"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark" />

            <com.wokconns.wokconns.utils.CustomTextViewBold
                android:id="@+id/tvNo"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/cancel1"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

        </LinearLayout>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</RelativeLayout>