<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.activity.ImageGallery">

        <RelativeLayout
            android:id="@+id/action_bar_menus"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:orientation="horizontal"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/llBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back"
                    app:tint="@color/black"
                    android:textColor="@color/white" />

            </LinearLayout>

            <com.wokconns.wokconns.utils.CustomTextViewBold
                android:id="@+id/tvHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/profile_gallery"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_below="@+id/action_bar_menus">

            <com.wokconns.wokconns.utils.CustomTextViewBold
                android:id="@+id/tv_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_gallery"
                android:textColor="@color/black"
                android:textSize="@dimen/_22sdp" />

            <com.wokconns.wokconns.utils.CustomTextViewBold
                android:id="@+id/tv_gallery_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_gallery"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/add_new_gallery"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <com.wokconns.wokconns.utils.CustomTextView
                android:id="@+id/tv_gallery_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@id/tv_gallery_add"
                android:text="@string/add_new_gallery_msg" />

            <LinearLayout
                android:id="@+id/ll_gallery_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_gallery_msg"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewServiceImage"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    card_view:cardCornerRadius="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/image_card_color">

                    <ImageView
                        android:id="@+id/ivAddServiceImage"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center"
                        app:tint="@color/white"
                        android:src="@drawable/ic_add" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <com.wokconns.wokconns.utils.CustomTextViewBold
                android:id="@+id/tv_gallery_all_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_gallery_add"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/all_add_new_gallery"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp" />

            <com.wokconns.wokconns.utils.CustomTextView
                android:id="@+id/tv_gallery_all_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_below="@id/tv_gallery_all_add"
                android:text="@string/view_gallery_msg" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_gallery_all_msg"
                android:layout_margin="5dp"/>

            <RelativeLayout
                android:id="@+id/rlZoomImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">

                <com.wokconns.wokconns.utils.TouchImageView
                    android:id="@+id/ivZoom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/ivClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="15dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_close_circle" />

            </RelativeLayout>
        </RelativeLayout>

        <com.wokconns.wokconns.utils.CustomTextViewBold
            android:id="@+id/tvNotFound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/no_gallery_found"
            android:textSize="18sp"
            android:visibility="gone" />


    </RelativeLayout>
</layout>