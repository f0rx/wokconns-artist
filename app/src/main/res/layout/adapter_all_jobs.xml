<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="5dp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="4dp">

            <RelativeLayout
                android:id="@+id/rlClick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <LinearLayout
                    android:id="@+id/ll_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.wokconns.wokconns.utils.CustomTextViewSemiBold
                        android:id="@+id/tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black_off"
                        android:textSize="@dimen/_14sdp" />

                    <com.wokconns.wokconns.utils.CustomTextView
                        android:id="@+id/tvDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="@dimen/_11sdp" />

                    <com.wokconns.wokconns.utils.CustomTextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvTitle"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:text=""
                        android:textSize="@dimen/_11sdp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll_first"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:orientation="horizontal">

                        <com.wokconns.wokconns.utils.CustomTextView
                            android:id="@+id/tv_category"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/artist_category"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <com.wokconns.wokconns.utils.CustomTextViewSemiBold
                            android:id="@+id/tv_price"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_weight=".1"
                            android:gravity="end"
                            android:text="50"
                            android:textColor="@color/green"
                            android:textSize="@dimen/_13sdp" />
                    </LinearLayout>

                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0.25dp"
                    android:layout_below="@+id/ll_second"
                    android:layout_marginTop="5dp"
                    android:background="@color/gray_line" />

                <RelativeLayout
                    android:id="@+id/rlPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:orientation="vertical"
                        app:cardCornerRadius="@dimen/_8sdp">

                        <ImageView
                            android:id="@+id/ivImage"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/dummyuser_image" />
                    </androidx.cardview.widget.CardView>

                    <com.wokconns.wokconns.utils.CustomTextView
                        android:id="@+id/tvName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_toEndOf="@+id/card_image"
                        android:text=""
                        android:textAllCaps="true"
                        android:textSize="@dimen/_11sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvName"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/card_image">

                        <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginTop="8dp"
                            android:src="@drawable/ic_placeholder" />

                        <com.wokconns.wokconns.utils.CustomTextView
                            android:id="@+id/tvAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:text=""
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="0.25dp"
                    android:layout_below="@id/rlPhoto"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@color/gray_line" />

                <LinearLayout
                    android:id="@+id/ll_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view1"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <com.wokconns.wokconns.utils.CustomTextViewSemiBold
                        android:id="@+id/tvTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/job_id" />

                    <com.wokconns.wokconns.utils.CustomTextViewRegular
                        android:id="@+id/tvJobId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@+id/tvTxt"
                        android:text=""
                        android:textAllCaps="true"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llApply"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@id/ll_job"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/button_selectorgreen"
                    android:gravity="center">

                    <com.wokconns.wokconns.utils.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_right_white"
                        android:drawablePadding="8dp"
                        android:text="@string/apply"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>


            </RelativeLayout>

        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</layout>